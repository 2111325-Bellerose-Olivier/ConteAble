<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <ImageView>
        <image>
            <Image url="@Logo.jpg"/>
        </image>
    </ImageView>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox>
        <VBox>
            <TextField fx:id="filtreIdEmployee"/>
            <ListView fx:id="employees"/>
        </VBox>
        <VBox>
            <Button text="Retour" onAction="#retour"/>
            <DatePicker fx:id="dateDebut"/>
            <Label fx:id="validationDebut"/>
            <DatePicker fx:id="dateFin"/>
            <Label fx:id="validationFin"/>
            <Button fx:id="genere" onAction="#generate">Générer</Button>
        </VBox>
    </HBox>
</VBox>
