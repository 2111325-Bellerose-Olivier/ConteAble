<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="validation"/>
    <HBox>
        <TextField fx:id="nom" promptText="nom"/>
        <TextField fx:id="prenom" promptText="prenom"/>
    </HBox>
    <TextField fx:id="courriel" promptText="courriel"/>
    <ComboBox fx:id="role" promptText="role"/>
    <TextField fx:id="password" promptText="password"/>
    <Hyperlink text="connexion" onAction="#connexion"/>
    <Button onAction="#cree" text="Cree!"/>
</VBox>
